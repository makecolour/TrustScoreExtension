{
	"manifest_version": 3,
	"name": "Trust Score",
	"author": "Chillin Studio",
	"version": "1.0",
	"description": "FU Autokit is a Chrome extension that help FPT University students by automating various userâ€™s interactions.",
	"action": {
		"default_popup": "./popup/popup.html"
	},
	"default_locale": "vi",
	"options_page": "./popup/popup.html",
	"homepage_url": "https://app-1fd3ee37-b34c-482a-ba11-dbb1f80e9497.cleverapps.io",
	"permissions": [
		"storage",
		"contextMenus",
		"declarativeContent",
		"activeTab",
		"tabs",
		"background",
		"*://app-1fd3ee37-b34c-482a-ba11-dbb1f80e9497.cleverapps.io/*"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"/_locales/vi/messages.json",
				"/_locales/en/messages.json"
			],
			"matches": [
				"<all_urls>"
			]
		},
		{
			"resources": [
				"/data/trustscore.json"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"background": {
			"service_worker": "./service/service_worker.js"

		},
	"content_scripts": [
		{
			"matches": [
				"*://www.facebook.com/groups/356018761148436/user/*",
				"*://www.facebook.com/groups/fuhoalac/user/*"
			],
			"js": [
				"./content/Functions.js",
				"./content/UserInGroups.js"
			]
		},
		{
			"matches": [
				"*://www.facebook.com/*"
			],
			"exclude_matches": [
				"*://www.facebook.com/groups/fuhoalac*",
				"*://www.facebook.com/groups/356018761148436*",
				"*://www.facebook.com/"
			],
			"js": [
				"./content/Functions.js",
				"./content/UserGeneral.js"
			]
		},
		{
			"matches": [
				"*://www.facebook.com/groups/fuhoalac",
				"*://www.facebook.com/groups/356018761148436"
			],
			"exclude_matches": [
				"*://www.facebook.com/groups/356018761148436/user/*",
				"*://www.facebook.com/groups/fuhoalac/user/*",
				"*://www.facebook.com/groups/fuhoalac/posts/*",
				"*://www.facebook.com/groups/356018761148436/posts/*"
			],
			"js": [
				"./content/Functions.js",
				"./content/GroupGeneral.js"
			]
		},
		{
			"matches": [
				"*://www.facebook.com/groups/fuhoalac/posts/*",
				"*://www.facebook.com/groups/356018761148436/posts/*"
			],
			"js": [
				"./content/Functions.js",
				"./content/GroupContent.js"
			]
		},
		{
			"matches": [
				"*://www.facebook.com/groups/356018761148436/search/*",
				"*://www.facebook.com/groups/fuhoalac/search/*"
			],
			"js": [
				"./content/Functions.js",
				"./content/GroupSearch.js"
			]
		}
	],
	"icons": {
		"16": "./assets/favicon.png",
		"32": "./assets/favicon.png",
		"48": "./assets/favicon.png",
		"128": "./assets/favicon.png"
	}
}